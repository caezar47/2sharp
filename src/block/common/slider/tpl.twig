{% if view == "top" %}
<section class="{{prefix}}panel  {{mod}}" data-slick-top>
	{% for value in list %}		
	<a href="{{value.link}}" class="{{prefix}}item  {{mod}}">
		<p class="{{prefix}}heading  {{mod}}" {% if value.color %} style="-webkit-text-stroke: 1px {{value.color}};"{% endif %}>{{value.name}}</p>
		<p class="{{prefix}}preview  {{mod}}"><img src="{{value.img}}" class="img-responsive" alt=""></p>
	</a> 
	{% endfor %}
</section>
{% endif %}